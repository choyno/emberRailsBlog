  <div class="navbar">
    <div class="navbar-inner">
      <a href="#" class="brand" >Blogger</a>
      <ul class="nav">
        <li> {{#link-to 'posts'}}Posts{{/link-to}}</li>
        <li> {{#link-to 'about'}}About{{/link-to}}</li>
